= form_for(@form) do |f|
  - if @form.errors.any?
    #error_explanation
      %h2
        = pluralize(@form.errors.count, "error")
        prohibited this form from being saved:
      %ul
        - @form.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :receiver
    %br/
    = f.text_field :receiver
  .field
    = f.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name)
  .actions
    = f.submit
