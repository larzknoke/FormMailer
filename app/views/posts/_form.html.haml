= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :sender
    %br/
    = f.text_field :sender
  .field
    = f.label :content
    %br/
    = f.text_field :content
  .actions
    = f.submit
