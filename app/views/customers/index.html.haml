%p#notice= notice
%h1 Listing Customers
%table.table
  %thead
    %tr
      %th Name
      %th Api-Key
      %th Private
      %th{:colspan => "3"}
  %tbody
    - @customers.each do |customer|
      %tr
        %td= customer.name
        %td= customer.apikey
        %td= customer.private_content
        %td= link_to 'Show', customer
        %td= link_to 'Edit', edit_customer_path(customer)
        %td= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Customer', new_customer_path, :class => "btn btn-success"
